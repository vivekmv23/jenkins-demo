pipeline {
  agent any
  parameters {
    string(name:'VERSION', defaultValue:"1.0.0", description:"version number" )
  }
  stages {
    stage("BUILD") {
      steps {
        echo "running build for version ${params.VERSION}"
      }
    }
    stage("DEPLOY") {
      steps {
        echo "running DEPLOY"
      }
    }
    stage("TEST") {
      steps {
        echo "running TEST"
      }
    } 
  }
}
